<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/contractImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/textViewContractName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contractImage"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/settings_margin_horizontal"
        android:textColor="@color/contractstore_name"/>

    <TextView
        android:id="@+id/textViewContractDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contractImage"
        android:layout_below="@+id/textViewContractName"
        android:layout_marginStart="@dimen/settings_margin_horizontal"
        android:textColor="@color/contractstore_description"/>

</RelativeLayout>