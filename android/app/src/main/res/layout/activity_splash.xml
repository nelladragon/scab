<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/scroll"
    tools:context=".SplashActivity"
    android:theme="@style/AppTheme.NoActionBar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_title1_margin_top"
        android:textSize="@dimen/splash_title_text_size"
        android:textColor="@color/red"
        android:id="@+id/textViewAppName1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAppName1"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/splash_title_text_size"
        android:textColor="@color/red"
        android:id="@+id/textViewAppName2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAppName2"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/splash_title_text_size"
        android:textColor="@color/red"
        android:id="@+id/textViewAppName3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/splash_author_margin_top"
        android:textColor="@color/black"
        android:textSize="@dimen/splash_author_text_size"
        android:text="@string/author"
        android:id="@+id/textViewAuthor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewAuthor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textColor="@color/black"
        android:textSize="@dimen/splash_copyright_text_size"
        android:text="@string/copyright"
        android:id="@+id/textViewCopyright"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCopyright"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="@dimen/splash_version_text_size"
        android:text="Version x.y"
        android:id="@+id/textViewVersion"/>
</RelativeLayout>