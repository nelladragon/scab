<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:showIn="@layout/activity_donate"
    tools:context="com.nelladragon.common.DonateActivity">

    <TextView
        android:id="@+id/textViewDonateIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/donate_intro"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_size"/>

    <TextView
        android:id="@+id/textViewDonateStatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="@string/donate_status_title"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/textViewDonateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textViewDonateStatusTitle"
        android:layout_toRightOf="@+id/textViewDonateStatusTitle"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/settings_margin_horizontal"
        android:layout_marginLeft="@dimen/settings_margin_horizontal"
        android:textColor="@color/blue"/>

    <ListView
        android:id="@+id/listViewDonate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewDonateIntro"
        android:layout_above="@+id/textViewDonateStatus"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/settings_padding_horizontal"
        android:paddingRight="@dimen/settings_padding_horizontal"
        android:paddingTop="@dimen/settings_padding_vertical"
        android:paddingBottom="@dimen/settings_padding_vertical"
        android:layout_marginTop="@dimen/settings_margin_vertical"
        android:layout_marginBottom="@dimen/settings_margin_vertical"
        android:background="@drawable/rect_black_stroke_white_fill"/>

</RelativeLayout>
