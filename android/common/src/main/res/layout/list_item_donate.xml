<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <Button
        android:id="@+id/buttonDonateNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/settings_margin_horizontal"
        android:layout_marginLeft="@dimen/settings_margin_horizontal"/>

    <TextView
        android:id="@+id/textViewDonateAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/buttonDonateNow"
        android:layout_toLeftOf="@+id/buttonDonateNow"
        android:layout_centerVertical="true"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/black"/>


</RelativeLayout>